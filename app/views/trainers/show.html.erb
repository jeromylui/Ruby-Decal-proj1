<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<% Pokemon.find_each do |pokemon| %>
  <% if pokemon.trainer_id == @trainer.id %>
    <% if pokemon.ndex %>
      <%= image_tag("pokemon/#{pokemon.ndex}.png", alt: "pokemon") %>
    <% end %>
    <%= pokemon.name %> lvl:<%= pokemon.level %> health:<%= pokemon.health %>
    <%= button_to "Damage!", damage_path(pokemon_id: pokemon, trainer_id: @trainer), :class => "button medium", :method => :patch %><br>
  <% end %>
<% end %>
<% if @logged_in_trainer.id == @trainer.id %>
  <p><%= link_to 'Create new pokemon', new_path, {:msg => "" }%></p>
<% end %>